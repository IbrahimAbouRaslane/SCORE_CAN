<%= form_with model: [pool,team] do |form|%>
  <%= form.hidden_field :pool_id, value: pool.id %>
  <div>
    <%= form.label :name, 'Name' %>
    <%= form.text_field :name %>
    <% if team.errors[:name] %>
      <span style='color: red'><%= team.errors[:name][0] %></span>
    <% end %>
  </div>
  <div>
    <%= form.label :flag_url, 'Flag_url' %>
    <%= form.text_field :flag_url %>
    <% if team.errors[:flag_url] %>
      <span style='color: red'><%= team.errors[:flag_url][0] %></span>
    <% end %>
  </div>

<button class="bg-blue-500 hover:bg-blue-700  font-bold py-2 px-4 rounded ">
    <%= form.submit 'Create team' %>
  </button>
<% end %>