<style>
  .bgk-color{
    background-color: #E15007 ;
  }
  .sub-color{
    background-color: #208B3A  ;
  }
</style>
<%= form_with model: [pool,match] do |form| %>
<%= form.hidden_field :pool_id, value: pool.id %>
<div>
  <div class="flex justify-center px-5 w-full">
    <div class="w-4/5 flex justify-start ">
      <%=form.select :team_a_id, Team.all.collect {|team_a| [ team_a.name, team_a.id ] } %>
    </div>
    <div class="w-1/5 overflow-hidden border-1 border-green-300">
      <%= form.number_field :score_a %>
    </div>
  </div>
  
  <div class="flex justify-center px-5 w-full">
    <div class="w-4/5 flex justify-start ">
      <%=form.select :team_b_id, Team.all.collect {|team_b| [ team_b.name, team_b.id ] } %>
    </div>
    <div class="w-1/5 overflow-hidden border-1 border-green-300">
      <%= form.number_field :score_b %>
    </div>
  </div>
  <div class="flex justify-center px-5 w-full">
    <div class="w-4/5 flex justify-start">
      <%=form.date_field :date %>
    </div>
  </div>
  <div class="w-full flex justify-center overflow-hidden border-1 border-green-300">
    <%= form.time_field :start_at%>
  </div>

  <%# if match.persisted? %>
  <%#= form.submit 'Update Match', class: "w-full text-center py-3 rounded bg-indigo-600 text-white hover:bg-green-dark focus:outline-none"  %>
  <%# else %>
  <%# end %>
  <div class="py-5">
    <%= form.submit 'Update Score', class: "w-2/3 text-center py-3 rounded-lg bg-vert-color text-white hover:bg-indigo-200 focus:outline-none sub-color"  %>
  </div>
  <%end%>
</div>