<style>
  .h-75{
    height:19rem
  }
</style>
<div class="flex items-center justify-center h-screen flex-wrap content-between overflow-hidden">
  <div class="w-full my-6 flex-wrap justify-center content-start px-5">
    <div class='w-full flex justify-center'>
      <%= image_tag "logo.png", class: "w-36" %>
    </div>
    <div class='w-full flex justify-between'>
      <span><i class="fas fa-chevron-left"></i></span>
      <span><i class="fas fa-cog"></i></span>
    </div>
  </div>

  <div class="w-full overflow-hidden h-2/5 flex justify-center items-center">
    <%= image_tag "goalkeeper.png", class:' h-75' %>
  </div>

  <div class=" flex flex-col w-70  rounded-lg ">

    <span class="text-3xl font-semibold mb-5">CONNEXION</span>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.text_field :phone, autofocus: true, placeholder:'Numéro de téléphone', class: 'w-full outline-none  rounded px-3 py-2 mb-5 mr-5 border border-green-500' %>
      </div> 

      <div class="field">
        <%= f.password_field :password, placeholder:'Mot de passe', autocomplete: "current-password", class: 'w-full outline-none  rounded px-3 py-2 mb-5 mr-5 border border-green-500' %>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div> 
        <% end %>
      </div> 
      <div class="actions flex justify-center" >
        <%= f.submit "CONNEXION", class: "bg-green-700 text-white font-bold py-2 px-4 mb-2 mt-1 rounded text-center w-full" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div> 
  <div class=" flex justify-beetween items-center mb-2">
    <div class=" text-gray-400">Powered by</div> 
      <%= image_tag "Logo_TS-01.png", class: "w-36 " %>
    </div>
  </div>
</div>




