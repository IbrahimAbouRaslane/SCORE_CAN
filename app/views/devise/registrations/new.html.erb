<style>
  .h-75{
    height:19rem
  }
</style>
<div class="flex items-center justify-center h-screen flex-wrap content-between overflow-hidden">
  <div class="w-full my-6 flex-wrap justify-center content-start px-5">
    <div class='w-full flex justify-center'>
      <%= image_tag "logo.png", class: "w-36" %>
    </div>
    <div class='w-full flex justify-between'>
      <span><i class="fas fa-chevron-left"></i></span>
      <span><i class="fas fa-cog"></i></span>
    </div>
  </div>

  <div class="w-full overflow-hidden h-2/5 flex justify-center items-center">
    <%= image_tag "player.png", class:' h-75 ' %>
  </div>
<div class=" flex flex-col w-70  rounded-lg ">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <span class="text-3xl font-semibold mb-5">INSCRIPTION</span>
      
        <div class="field">
          <%= f.text_field :full_name, placeholder:'Votre nom', class: 'w-full outline-none  rounded px-3 py-2 mb-5 mr-5 border border-green-500' %>
        </div>

        <div class="field">
          <%= f.text_field :phone, placeholder:'Numéro de téléphone', class: 'w-full outline-none  rounded px-3 py-2 mb-5 mr-5 border border-green-500' %>
        </div>

        <div class="field">
          <%= f.hidden_field :pin, class: 'w-full outline-none  rounded px-3 py-2 mb-5 mr-5 border border-green-500', value: rand(1000..9999) %>
        </div>

      <div class="field">
        <% f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimums)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder:'Mot de passe ', class: 'w-full outline-none  rounded px-3 py-2 mb-5 mr-5 border border-green-500' %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:'Confirmer le mot de passe', class: 'w-full outline-none  rounded px-3 py-2 mb-5 mr-5 border border-green-500' %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "bg-green-700 text-white font-bold py-2 px-4 mb-2 mt-1 rounded text-center w-full" %>
        
      </div>
    <% end %>
    </div>
  <div class=" flex justify-beetween items-center mb-2">
      <div class=" text-gray-400">Powered by</div> 
        <%= image_tag "Logo_TS-01.png", class: "w-36 " %>
      </div>
    </div>
</div>
